{{#if (and email git_username)~}}
[user]
    email = {{email}}
    name = {{git_username}}

[credential]
    helper = store

{{/if~}}
[core]
    autocrlf = input
    {{~#if delta}}
    pager = delta
    {{~/if}}

{{#if delta~}}
[delta]
    line-numbers = true
    hunk-header-style = omit
    syntax-theme = zenburn
    file-style = bold yellow ul
    file-decoration-style = none

{{/if~}}
[help]
    autocorrect = 20

[alias]
    # Same as shell aliases
    s = status -sb
    d = diff
    ds = diff --staged
    a = add
    c = commit
    ps = push
    pl = pull
    lg = log --oneline --graph --decorate

# vim:ft=gitconfig
