{{#if (and email git_username)~}}
[user]
    email = {{email}}
    name = {{git_username}}

{{/if~}}
[core]
    autocrlf = input
    {{~#if delta}}
    pager = delta
    {{~/if}}

{{#if delta~}}
[delta]
    line-numbers = true
    hunk-header-style = omit
    syntax-theme = zenburn
    file-style = bold yellow ul
    file-decoration-style = none

{{/if~}}
[help]
    autocorrect = 20

[alias]
    # Same as shell aliases
    s = status
    d = diff
    a = add
    c = commit
    # Until here
    o = checkout
    ps = push
    pl = pull
    lg = log --oneline --graph --decorate

